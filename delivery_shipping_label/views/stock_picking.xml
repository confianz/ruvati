<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_picking_form_extensions" model="ir.ui.view">
            <field name="name">stock.picking.extensions</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="picking_type_id_code" invisible="1"/>
                    <button name="generate_shipping_label" type="object" string="Print Shipping label" attrs="{'invisible': [('state', 'not in', ['done']), ('picking_type_id_code', '!=', 'PICK')]}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
